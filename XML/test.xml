<?xml version="1.0" encoding="UTF-8"?>

<suite name="test"
 
	user="danrusu"
	 
	project="test">


	<test name="save_and_compare_elements_screenshots" browser="chrome">


		<testcase name="projects.common.testCases.OpenPage" 
		
		    save="scaling=1.25;screenshotsFolder={$logFolder}"
		    		
			url="http://danrusu.ro/test.html" />


 		<testcase name="projects.common.testCases.WebElementScreenShot"
		
			scaling="{scaling}" 
		
		 	selector="cssselector:body"
		 	
		 	file="{screenshotsFolder}/body.png" />	
			

		<testcase name="projects.common.testCases.WebElementScreenShot" 
		
			scaling="{scaling}"
		
		 	selector="cssselector:.flexbox-header"
		 	
		 	file="{screenshotsFolder}/flexboxHeader.png" />	


		<testcase name="projects.common.testCases.WebElementScreenShot"
		
			scaling="{scaling}" 
		
		 	selector="cssselector:.grid-page"
		 	
		 	file="{screenshotsFolder}/gridPage.png" />	
		 		 
		 	
		 	
		<testcase name="projects.common.testCases.WebElementScreenShotCompare"
		
			scaling="{scaling}" 
		 	
		 	selector1="id:slot_machine_master"
		 	
		 	selector2="id:slot_machine"
		 	
		 	
		 	file1="{screenshotsFolder}/slot_machine_master.png" 
		 	
		 	file2="{screenshotsFolder}/slot_machine.png"
		 	
		 	diffFile="{screenshotsFolder}/diff.png"
		 	 
			expectedFailureRegExp=".*Screenshots are different.*" />
		 	
		 
		<testcase name="projects.common.testCases.WebElementScreenShotCompare"
		
		    note="slot_machine_master2.png == slot_machine_master3.png == noDiff.png"
		
			scaling="{scaling}" 
		 	
		 	selector1="id:slot_machine_master"
		 	
		 	selector2="id:slot_machine_master"
		 	
		 	
		 	file1="{screenshotsFolder}/slot_machine_master2.png" 
		 	
		 	file2="{screenshotsFolder}/slot_machine_master3.png"
		 	
		 	diffFile="{screenshotsFolder}/noDiff.png" />	
		 	
		 	
	</test>
	
	
	<test name="compare_screenshots_from_disk">
	
		
		 <testcase name="projects.common.testCases.ScreenShotCompare"
		
		 	file1="{screenshotsFolder}/slot_machine_master.png"
		 	 
		 	file2="{screenshotsFolder}/slot_machine.png"
		 	 
		 	diffFile="{screenshotsFolder}/screenshotDiff.png" 
		 	
		 	expectedFailureRegExp=".*Screenshots are different.*"/>	
		 	
		 	
		<testcase name="projects.common.testCases.ScreenShotCompare"
		
		 	file1="{screenshotsFolder}/slot_machine_master2.png"
		 	 
		 	file2="{screenshotsFolder}/slot_machine_master3.png"
		 	 
		 	diffFile="{screenshotsFolder}/screenshotNoDiff.png" />	
			
			
	</test>
	
	
</suite>